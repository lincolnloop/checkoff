<div class="row">
  <div class="large-12 columns">
    <label {{bindAttr for="nameField.field_id"}}>Name</label>
    {{view Ember.TextField viewName='nameField'
                           valueBinding='model.name'
                           name='name'
                           placeholder="Give your new project a name"}}
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <label {{bindAttr for="descriptionField.field_id"}}>Description</label>
    {{view Ember.TextArea viewName='descriptionField'
                           valueBinding='model.description'
                           name='description'
                           placeholder="An optional description"}}
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <label {{bindAttr for="linkField.field_id"}}>Link</label>
    {{view Ember.TextField viewName='linkField'
                           valueBinding='model.link'
                           name='link'
                           placeholder="An optional link, to Ginger perhaps"}}
  </div>
</div>
